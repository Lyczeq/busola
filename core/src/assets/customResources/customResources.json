      "description": "Custom jobs are a great resource",
      "columns": [
        {
          "header": "BackOffLimit",
          "valuePath": "$.spec.backoffLimit"
        },
        {
          "header": "Selector's matchLabels",
          "valuePath": "$.spec.selector.matchLabels",
          "display": "labels"
        },
        {
          "header": "Container image names",
          "valuePath": "$.spec.template.spec.volumes",
          "display": "array",
          "arrayValuePath": "$.name"
        }
      ]
